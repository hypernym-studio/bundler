{
  "name": "@hypernym/bundler",
  "version": "0.21.0",
  "author": "Hypernym Studio",
  "description": "ESM & TS module bundler.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hypernym-studio/bundler.git"
  },
  "homepage": "https://github.com/hypernym-studio/bundler",
  "funding": "https://github.com/sponsors/ivodolenc",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs"
    },
    "./plugins": {
      "types": "./dist/plugins/index.d.mts",
      "import": "./dist/plugins/index.mjs"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "module",
    "bundling",
    "javascript",
    "typescript",
    "hyperbundler",
    "declarations",
    "bundler",
    "builder",
    "bundle",
    "types",
    "build",
    "esm",
    "dts"
  ],
  "bin": {
    "hyperbundler": "./dist/bin/index.mjs"
  },
  "scripts": {
    "build": "bun -b run ./src/bin/index.ts",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "prepublishOnly": "pnpm build"
  },
  "peerDependencies": {
    "@types/node": ">=20.0.0",
    "typescript": ">=5.0.0"
  },
  "peerDependenciesMeta": {
    "@types/node": {
      "optional": true
    },
    "typescript": {
      "optional": true
    }
  },
  "dependencies": {
    "@hypernym/args": "^0.3.3",
    "@hypernym/colors": "^1.0.5",
    "@hypernym/utils": "^3.4.5",
    "rolldown": "^1.0.0-beta.34",
    "rolldown-plugin-dts": "^0.15.9"
  },
  "devDependencies": {
    "@hypernym/eslint-config": "^3.6.3",
    "@hypernym/prettier-config": "^3.2.6",
    "@hypernym/tsconfig": "^2.6.2",
    "@types/node": "^24.3.0",
    "eslint": "^9.34.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  }
}
